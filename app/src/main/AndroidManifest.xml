<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projectina.ina">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InfoNav"
            android:label="@string/title_activity_trimester"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Map"
            android:label="@string/title_activity_map"
            android:parentActivityName=".Home"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.projectina.ina.Home" />
        </activity>
        <activity
            android:name=".Glossary"
            android:label="@string/title_activity_glossary"
            android:parentActivityName=".Home"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.projectina.ina.Home" />
        </activity>
        <activity
            android:name=".AboutMeActivity"
            android:label="@string/title_activity_about_me"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FeedbackActivity"
            android:label="@string/title_activity_feedback"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>