<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectina.ina.TrimestersFrag">


    <Button
        android:text="Trimester 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:id="@+id/toTrimester1" />

    <Button
        android:text="Trimester 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toTrimester1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:id="@+id/toTrimester2" />

    <Button
        android:text="Trimester 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toTrimester2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:id="@+id/toTrimester3" />
</RelativeLayout>
