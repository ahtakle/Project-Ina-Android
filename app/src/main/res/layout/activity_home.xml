<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.projectina.ina.Home">

    <Button
        android:text="Introduction"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:textStyle="italic"
        android:onClick="dispatchBackgroundIntent"
        android:id="@+id/toIntroduction" />

    <Button
        android:text="Map"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:textStyle="italic"
        android:onClick="dispatchMapIntent"
        android:id="@+id/toMap" />

    <Button
        android:text="Weekly Lessons"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:textStyle="italic"
        android:onClick="dispatchTrimesterIntent"
        android:id="@+id/toTrimesters" />

    <Button
        android:text="Glossary"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:textStyle="italic"
        android:onClick="dispatchGlossaryIntent"
        android:id="@+id/toGlossary" />


</LinearLayout>





